pipeline { 
 agent any
     stages{  
      stage('Clone repository') {               
          steps {    
            checkout scm  
            }
      }     
      stage('Build image') {         
        steps {
              sh ‘docker build -t "st251/web_server".’
                }
       }   
      stage('Building our image') {
            steps {
                script {
                    dockerImage = docker.build "st251/web_server:$BUILD_NUMBER"
                    dockerImage = docker.build "st251/web_server:latest"
                }
            }
        }
   stage('push to DHub') {
            steps {
                script {
                    // Assume the Docker Hub registry by passing an empty string as the first parameter
                    docker.withRegistry('' , 'dockerhub-st251-jenkins') {
                        dockerImage.push()
                        docker push "${REGISTRY_NAME}:${GIT_BRANCH}-${GIT_COMMIT}"
                    }
                }
            }
        } 
      stage('Test image') { 
       steps {
           echo '${GIT_BRANCH}-${GIT_COMMIT}'  
           }
        }     
       stage('Push image') {
        steps {
    echo 'end' 
               }
              }    
           }
         }
       
      
       
