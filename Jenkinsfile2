pipeline{
    def app
    agent any
    parameters {
        booleanParam (
            defaultValue: true,
            description: 'Compile and testing SonarQube',
            name: 'TEST')
        booleanParam (
            defaultValue: true,
            description: 'Build and push images to DockerHub',
            name: 'BUILD')
        booleanParam (
            defaultValue: true,
            description: 'Deploy to K8S',
            name: 'DEPLOY')
    }
    stages{
        
        stage('Test backend'){
            when {
                expression { params.TEST == true }
            }
            steps {
               echo "Now we begin UNIT TEST"
               echo "Now we begin UNIT TEST on ${env.BRANCH_NAME}"
            }
        }
        stage('Test frontend 2'){
            when {
                expression { params.TEST == true }
            }
            steps {
                echo "Now we begin SMOKE TEST"
            }
        }

        stage('Build frontend'){
            when {
                expression { params.BUILD == true }
            }
            steps{
                echo "Now we begin BUILD"
                app = docker.build("st251/web_server")
            }
        }
        stage('Deploy'){
            when {
                expression { params.DEPLOY == true }
            }
            steps{
             input 'Deploy to Production?'
                echo "Now we begin DEPLOY"
             docker.withRegistry('https://registry.hub.docker.com', 'dockerhub-st251-jenkins') {
               app.push("${env.BUILD_NUMBER}")
               app.push("latest")
              } 
            }
        }
    }
}
